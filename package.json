{
    "name": "x-monorepo",
    "private": true,
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "pnpm --filter nuxt-web dev",
        "dev:admin": "pnpm --filter nuxt-admin dev",
        "build": "turbo run build",
        "build:web": "pnpm --filter nuxt-web build",
        "build:admin": "pnpm --filter nuxt-admin build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "prettier": "^3.4.2",
        "turbo": "^2.3.3"
    },
    "packageManager": "pnpm@10.26.1",
    "engines": {
        "node": ">=18"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@parcel/watcher",
            "esbuild"
        ]
    }
}